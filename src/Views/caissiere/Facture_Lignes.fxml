                  <Label fx:id="montant" layoutX="10.0" layoutY="10.0" text="montant" textFill="DARKSLATEGRAY">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
         </padding>
      </VBox>
   </children>
